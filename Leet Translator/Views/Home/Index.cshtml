@model string

<h2>Translate Text to Leetspeak</h2>

<form method="post" action="@Url.Action("Translate", "Translation")" id="translationForm">
    <div class="form-group">
        <label for="inputText">Enter text:</label>
        <textarea class="form-control" id="inputText" name="inputText">@Model</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Translate</button>
</form>

<div id="translationResult">
    @if (!string.IsNullOrEmpty(Model))
    {
        <h3>Translated Text:</h3>
        <p>@Model</p>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#translationForm').submit(function (e) {
                e.preventDefault();
                var inputText = $('#inputText').val();
                $.ajax({
                    url: '@Url.Action("Translate", "Translation")',
                    type: 'POST',
                    data: { inputText: inputText },
                    success: function (result) {
                        $('#translationResult').html('<h3>Translated Text:</h3><p>' + result.translatedText + '</p>');
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        });
    </script>
}
