@model IEnumerable<Leet_Translator.Models.TranslationRecord>

<h2>Translation Records</h2>

<form asp-controller="Translation" asp-action="Search" method="get">
    <input type="text" name="searchTerm" placeholder="Enter search item" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Input Text</th>
            <th>Translated Text</th>
            <th>Timestamp</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.InputText</td>
                <td>@record.TranslatedText</td>
                <td>@record.TimeStamp</td>
            </tr>
        }
    </tbody>
</table>